<h1>Burgers!</h1>

<h2>Eat Burgers!</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <div class="burgerBox">
        {{this.id}}. {{this.burger_name}}  
        <form class="devour">
        <input class="input" type="hidden" value={{this.id}} type="text">
        <button class="submit" type=submit id={{this.id}}>Devour</button>
        </form>  
      </div>    
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
    <div class ="devoredBurgers">
       {{this.id}}. {{this.burger_name}}
    </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
